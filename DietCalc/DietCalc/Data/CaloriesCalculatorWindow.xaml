        xmlns:local="clr-namespace:DietCalc.Data"
        mc:Ignorable="d"
        Title="CaloriesCalculatorWindow" Height="450" Width="361.281">
    <Grid>
        <TextBox x:Name="txtboxAge"  HorizontalAlignment="Left" Height="23" Margin="144,48,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TxtboxAge_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,46,0,0" TextWrapping="Wrap" Text="Wiek" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,116,0,0" TextWrapping="Wrap" Text="Waga" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,151,0,0" TextWrapping="Wrap" Text="Wzrost" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,189,0,0" TextWrapping="Wrap" Text="Aktywność" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="41,233,0,0" TextWrapping="Wrap" Text="Tkanka tłuszczowa" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,273,0,0" TextWrapping="Wrap" Text="Cel diety" VerticalAlignment="Top"/>
