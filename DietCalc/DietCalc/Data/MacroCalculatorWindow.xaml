        <TextBox x:Name="txtBoxCarbs" HorizontalAlignment="Left" Height="23" Margin="107,144,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="txtBoxFats" HorizontalAlignment="Left" Height="23" Margin="107,182,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="55"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,77,0,0" TextWrapping="Wrap" Text="Macro split" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbxSplitMacros" HorizontalAlignment="Left" Margin="142,77,0,0" VerticalAlignment="Top" Width="139" SelectionChanged="CbxSplitMacros_SelectionChanged"/>
        <Slider HorizontalAlignment="Left" Margin="190,114,0,0" VerticalAlignment="Top" Width="91"/>
        <Slider HorizontalAlignment="Left" Margin="190,151,0,0" VerticalAlignment="Top" Width="91"/>
        <Slider HorizontalAlignment="Left" Margin="190,187,0,0" VerticalAlignment="Top" Width="91"/>
        <TextBlock HorizontalAlignment="Left" Margin="52,217,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" Height="23" Margin="107,210,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="126"/>
